---
import {
    Card,
    CardHeader,
    CardTitle,
} from "@/components/ui/card"
import { Badge } from "@/components/ui/badge"
import { Button } from "@/components/ui/button"
import { Heart } from 'lucide-react';

const { product } = Astro.props;
---

<Card>
  <CardHeader className="space-y-4">
    <div class="flex justify-between items-center">
      <Badge className="rounded-full">-{product.discount}%</Badge>
      <Button variant="outline" className="rounded-full h-7 w-7 p-0">
        <Heart className="h-4" />
      </Button>
    </div>
    <a href={`/prices/${product._id}/${product.slug}`}>
      <img src={product.image} alt={product.title} class="hover:scale-[102%] transition" />
    </a>
    <div>
      <a href={`/prices/${product._id}/${product.slug}`}>
        <CardTitle className="text-xl font-cabinet-grotesk hover:underline decoration-2">{product.title}</CardTitle>
      </a>
      <span class="text-2xl">{product.price}â‚¬</span>
    </div>
  </CardHeader>
</Card>